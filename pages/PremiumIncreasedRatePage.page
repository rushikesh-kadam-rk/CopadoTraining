<apex:page standardController="Booking__c" extensions="NewBookingController">
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockButtons >
                <apex:commandButton value="Confirm" action="{!confirmBooking}"/>
                <apex:commandButton value="Cancel" action="{!cancelBooking}"/>
            </apex:pageBlockButtons>
        <apex:pageBlockSection columns="1">
            <h6 style='margin:50px'>Due to High Demand, price of tickets is increased by 10%</h6><br></br>
            <apex:outputText label="Final Price of Tickets:" value="{!updatedPrice}"/>
            <h6 style='margin:50px'>Click on Confirm to Book Tickets</h6>           
        </apex:pageBlockSection>
        
        </apex:pageBlock>
    </apex:form>
</apex:page>