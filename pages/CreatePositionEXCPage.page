<apex:page standardController="Position__c" extensions="PositionExtensionController">
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!mysave}"/>
                <apex:commandButton value="Edit" action="{!myedit}"/>
                <apex:commandButton value="Delete" action="{!mydelete}"/>
            </apex:pageBlockButtons>
            
            <apex:pageBlockSection columns="1">
                <apex:inputField value="{!Position__c.Name}"/>
                <apex:inputField value="{!Position__c.Job_Description__c}"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>